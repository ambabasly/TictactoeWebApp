@using TictactoeWebApp.Models
@{
    ViewBag.Title = "Register";
}


<div id="logreg-forms" class="signup-dark">
    <form action="/Form/Signup" class="well form-horizontal" method="post">

        <div class="text-center text-justify">
            <h2>Welcome!</h2>
            <p>Signup to play with friends or with computer</p>
        </div>


        <hr />

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.ErrorMessage
            </div>
        }
        


        <!-- Name input -->
        <div class="form-group">
            <input type="text" id="inputFName" class="form-control" placeholder="First Name" name="FName" />
        </div>

        <div class="form-group">
            <input type="text" id="inputLName" class="form-control" placeholder="Last Name" name="LName" />
        </div>

        <!-- Email input -->
        <div class="form-group">
            <input type="email" id="inputEmail" class="form-control" placeholder="Email" name="LoginID" />
        </div>

        <!-- Password input -->
        <div class="form-group">
            <input type="password" id="inputPwd" class="form-control" placeholder="Password" name="LoginPwd" />
        </div>


        <!-- Submit button -->
        <div class="form-group">
            <button class="btn btn-primary btn-block mb-4" type="submit"><i class="fa fa-user-plus" aria-hidden="true"></i> Register</button>
        </div>
    </form>
</div>

