
@{
    ViewData["Title"] = "PlayerDetails";
}

<h1>PlayerDetails</h1>


<html>
<body>

    <div class="card text-center">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs">
                <li class="nav-item">
                    <a class="nav-link active" id="details">Player details</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link disabled" id="play">Play game</a>
                </li>
            </ul>
        </div>

        <div class="card-body text-justify">
            <form onsubmit="onDetailsSubmit()">
                <div class="form-group">
                    <label for="X_Name">Player 1 Name:</label>
                    <input type="text" class="form-control" id="X_Name" placeholder="Enter name of the player for [X]" required>
                </div>
                <div class="form-group">
                    <label for="O_Name">Player 2 Name:</label>
                    <input type="text" class="form-control" id="O_Name" placeholder="Enter name of the player for [X]" required>
                </div>
                <button type="submit" class="btn btn-primary" asp-area="" asp-controller="GameWindow" asp-action="PlayGame">Submit</button>
            </form>
        </div>

    </div>

</body>

</html>
